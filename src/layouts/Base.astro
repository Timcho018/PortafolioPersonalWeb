---
const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="es">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>{title ? `${title} — Jimmy` : 'Portafolio Jimmy'}</title>
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.2/css/all.min.css" />
  <link rel="stylesheet" href={Astro.resolve('../styles/global.css')} />
  <slot name="styles" />
</head>
<body>
  <header>
    <a href="/" class="logo">Jimmy</a>
    <i class="fas fa-bars menu-toggle"></i>
    <nav>
      <a href="/" class={Astro.url.pathname === '/' ? 'active' : ''}>Home</a>
      <a href="/sobremi" class={Astro.url.pathname === '/sobremi/' ? 'active' : ''}>Sobre mí</a>
      <a href="/proyectos" class={Astro.url.pathname === '/proyectos/' ? 'active' : ''}>Proyectos</a>
      <a href="/habilidades" class={Astro.url.pathname === '/habilidades/' ? 'active' : ''}>Habilidades</a>
      <a href="/experiencia" class={Astro.url.pathname === '/experiencia/' ? 'active' : ''}>Experiencia</a>
      <a href="/contacto" class={Astro.url.pathname === '/contacto/' ? 'active' : ''}>Contacto</a>
    </nav>
  </header>

  <slot />

  <footer class="site-footer">
    <p>© 2025 Jimmy. Todos los derechos reservados.</p>
  </footer>

  <slot name="cursors" />

  <script type="module" src={Astro.resolve('../scripts/menu.js')}></script>
  <slot name="scripts" />
</body>
</html>
